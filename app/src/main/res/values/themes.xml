<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Lunessa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Lunessa" parent="Base.Theme.Lunessa" />

    <style name="CustomBottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/anticdidone</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/pinkish_red</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SlideDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/SlideInRightAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SlideInRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>